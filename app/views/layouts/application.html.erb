                <%= link_to('そら豆', :action => 'show_category', :id => 1278)%>
              </li>
              <li>
                <%= link_to('新たまねぎ', :action => 'show_category', :id => 522)%>
              </li>
              <li>
                <%= link_to('新じゃがいも', :action => 'show_category', :id => 520)%>
              </li>
              <li>
                <%= link_to('アボカド', :action => 'show_category', :id => 1271)%>
              </li>
              <li>
                <%= link_to('レタス', :action => 'show_category', :id => 525)%>
